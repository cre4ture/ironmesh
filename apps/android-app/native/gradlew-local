#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

if [[ -z "${JAVA_HOME:-}" ]]; then
  if [[ -d "/snap/android-studio/current/jbr" ]]; then
    export JAVA_HOME="/snap/android-studio/current/jbr"
  fi
fi

if [[ -n "${JAVA_HOME:-}" ]]; then
  export PATH="$JAVA_HOME/bin:$PATH"
fi

exec "$SCRIPT_DIR/gradlew" "$@"
